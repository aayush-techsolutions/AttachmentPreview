<?xml version="1.0" encoding="utf-8"?>
<manifest>
  <control namespace="AttachmentPreview" constructor="AttachmentPreviewControl" version="1.0.0"
           display-name-key="AttachmentPreview_DisplayName"
           description-key="AttachmentPreview_Description"
           control-type="standard">

    <property name="recordId"
              display-name-key="Prop_RecordId_DisplayName"
              description-key="Prop_RecordId_Description"
              of-type="SingleLine.Text"
              usage="bound"
              required="true" />

    <property name="maxFileSize"
              display-name-key="Prop_MaxFileSize_DisplayName"
              description-key="Prop_MaxFileSize_Description"
              of-type="Whole.None"
              usage="input"
              required="false"
              default-value="10" />

    <property name="allowedFileTypes"
              display-name-key="Prop_AllowedFileTypes_DisplayName"
              description-key="Prop_AllowedFileTypes_Description"
              of-type="SingleLine.Text"
              usage="input"
              required="false"
              default-value="jpg,jpeg,png,gif,pdf,docx,xlsx,pptx,txt,mp4" />

    <property name="showPreview"
              display-name-key="Prop_ShowPreview_DisplayName"
              description-key="Prop_ShowPreview_Description"
              of-type="TwoOptions"
              usage="input"
              required="false"
              default-value="true" />

    <resources>
      <code path="index.ts" order="1" />
      <css path="css/AttachmentPreviewControl.css" />
      <resx path="strings/strings.resx" version="1.0.0" />
    </resources>

    <feature-usage>
      <uses-feature name="WebAPI" required="true" />
    </feature-usage>
  </control>
</manifest>